<div class="header-bar">
  <h1>New Post</h1>

  <div class="header-button-container">
    <%= button_to "Back to Posts", posts_path, method: :get, class: "header-button" %>
    <% if user_signed_in? %>
      <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "header-button", data: { turbo: "false" } %>
    <% else %>
      <%= button_to "Log in", new_user_session_path, method: :get, class: "header-button" %>
    <% end %>
  </div>
</div>

<div class="new-post-card">
  <%= form_with(model: @post, local: true) do |form| %>
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div>
      <%= form.label :content %><br>
      <%= form.text_area :content, class: "textarea-large" %>
    </div>

    <div>
      <%= form.submit "Create Post", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>